<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/notification_settings_bg" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:id="@+id/card_1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="8dp"
        app:cardElevation="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home to School"
                android:textColor="#fff"
                android:padding="4dp"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:id="@+id/text_header_1"
                android:textStyle="bold"
                android:background="@color/fab_material_blue_500"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/menu_item_1"
                android:layout_below="@id/text_header_1"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:baselineAligned="true">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:id="@+id/sound_img"
                    android:src="@mipmap/notification_sound"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/sound_img"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:text="Sound"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/sound_1"

                    android:layout_gravity="center"
                    android:layout_marginRight="4dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/menu_item_1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/menu_item_2"
                android:layout_below="@id/menu_item_1"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:baselineAligned="true">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:id="@+id/vibration_img_2"
                    android:src="@mipmap/notification_vibrate"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/sound_img"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:text="Mobile Vibration"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/vibration_1"

                    android:layout_gravity="center"
                    android:layout_marginRight="4dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/menu_item_2"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/card_2"
        android:layout_below="@id/card_1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="8dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="School to Home"
                android:textColor="#fff"
                android:padding="4dp"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:id="@+id/text_header_2"
                android:textStyle="bold"
                android:background="@color/fab_material_blue_500"/>

            <LinearLayout
                android:id="@+id/menu_item_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_header_2"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:baselineAligned="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sound_img_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:src="@mipmap/notification_sound" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/sound_img"
                    android:layout_weight="1"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="Sound"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/sound_2"

                    android:layout_marginRight="4dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/menu_item_3"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/menu_item_4"
                android:layout_below="@id/menu_item_3"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:baselineAligned="true">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:id="@+id/vibration_img"
                    android:src="@mipmap/notification_vibrate"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/sound_img"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:text="Mobile Vibration"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/vibration_2"

                    android:layout_gravity="center"
                    android:layout_marginRight="4dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/menu_item_4"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
