<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="net.kiriti.peelabus.ProfileActivity"
    android:weightSum="1">



    <ImageView
        android:id="@+id/profilebg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/profile_bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/shadow"
        style="@style/mainbutton"
        >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/parentproicon"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/parentproHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PARENTS INFO"
            style="@style/logintitle"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/parentproname"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Parent Name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:id="@+id/parentpromobile"
            style="?android:listSeparatorTextViewStyle"
            android:layout_margin="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:listSeparatorTextViewStyle"
            android:text="Large Text"
            android:id="@+id/parenproemail"
            android:layout_margin="20dp"/>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--style="?android:listSeparatorTextViewStyle"-->
            <!--android:text="Large Text"-->
            <!--android:id="@+id/parentproalt"-->
            <!--android:layout_margin="10dp"/>-->

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:columnCount="2"
            android:rowCount="1">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/thumbnail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#0099FF"
                android:layout_gravity="center"
                android:onClick="childPro"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/thumbnail1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#ECA208"
                android:layout_gravity="center"
                android:onClick="child2Pro"/>

            <!--<com.android.volley.toolbox.NetworkImageView-->
            <!--android:id="@+id/thumbnail"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="150dp"-->
            <!--android:layout_weight="0.40"-->
            <!--android:onClick="childPro"/>-->

            <!--<com.android.volley.toolbox.NetworkImageView-->
            <!--android:id="@+id/thumbnail1"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="150dp"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_weight="0.40"-->
            <!--android:onClick="child2Pro" />-->

        </GridLayout>




    </LinearLayout>
</RelativeLayout>
