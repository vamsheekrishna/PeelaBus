<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Alert.AlertsFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:layout_below="@id/card_1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="12dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/header"
            android:background="@color/pickup_drop_card_header"
            android:orientation="horizontal">

            <!--image not available-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_directions_bus_black_24dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="8dp"
                android:id="@+id/header_text"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="@string/pick_up_header"
                />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:padding="20dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/pick_or_drop_head"
                android:layout_marginTop="12dp"
                android:hint="@string/pick_up_text_heading"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/TextColor.Black"
                    android:text="Address"
                    android:focusable="false"
                    android:id="@+id/pick_or_drop_point_address"/>

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/get_alerts_header"
                android:text="@string/get_notifications_before"
                android:layout_below="@+id/pick_or_drop_head"
                android:layout_marginTop="12dp"/>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_below="@id/get_alerts_header"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:weightSum="30"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:id="@+id/two_min_button"
                    android:layout_margin="8dp"
                    android:textStyle="bold"
                    android:layout_weight="10"
                    android:background="@drawable/notify_alerts_button_bg"
                    android:textColor="@color/TextColor.Black"
                    android:text="@string/two_min"/>

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:id="@+id/five_min_button"
                    android:layout_margin="8dp"
                    android:textStyle="bold"
                    android:layout_weight="10"
                    android:background="@drawable/notify_alerts_button_bg"
                    android:textColor="@color/TextColor.Black"
                    android:text="@string/five_min"/>

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:id="@+id/ten_min_button"
                    android:layout_margin="8dp"
                    android:textStyle="bold"
                    android:layout_weight="10"
                    android:background="@drawable/notify_alerts_button_bg"
                    android:textColor="@color/TextColor.Black"
                    android:text="@string/ten_min"/>

            </android.support.v7.widget.LinearLayoutCompat>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>