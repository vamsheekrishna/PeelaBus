<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="peelabus.com">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="com.vivianaranha.mapsapp.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.vivianaranha.mapsapp.permission.MAPS_RECEIVE" />
    <uses-permission android:name="com.google.android.providers.gsf.permissions.READ_GSERVICES" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".peelabus.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/PeelaBusCustomTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".peelabus.Splash"
            android:theme="@style/SplashTheme">

            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->

        </activity>
        <activity
            android:name=".authentication.LoginActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".peelabus.ProfileActivity"
            android:label="@string/title_profiles"
            android:parentActivityName=".peelabus.MainActivity"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".peelabus.MainActivity" />
        </activity>
        <activity
            android:name=".peelabus.ChildActivity"
            android:label="@string/title_activity_child"
            android:parentActivityName=".peelabus.ProfileActivity" />
        <activity
            android:name=".peelabus.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".peelabus.Settings"
            android:parentActivityName=".peelabus.MainActivity" />
        <activity
            android:name=".peelabus.ChangePassword"
            android:label="@string/title_activity_change_password"
            android:parentActivityName=".peelabus.Settings"
             />
        <activity android:name=".peelabus.Attendance" />
        <activity
            android:name=".peelabus.Alerts"
            android:label="@string/title_alerts"
            android:parentActivityName=".peelabus.MainActivity"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".peelabus.MainActivity" />
        </activity>
        <activity
            android:name=".peelabus.Track"
            android:label="@string/title_track_my_bus"
            android:parentActivityName=".peelabus.MainActivity"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".peelabus.MainActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCFVfSrSm3AONhiPBHJPexGdRJFrgw8fUc" />

        <activity
            android:name=".peelabus.NotificationSettingsActivity"
            android:label="@string/title_activity_notification_settings"
            android:parentActivityName=".peelabus.Settings" />

        <service android:name=".peelabus.MyService">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>

        <activity
            android:name=".home.PeelaBusHome"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Alert.AlertActivity"
            android:label="@string/title_activity_alert">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".home.PeelaBusHome" />
        </activity>
        <activity android:name=".profile.ProfileActivity"
            android:label="@string/title_activity_profile">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".home.PeelaBusHome" />
        </activity>
    </application>

</manifest>